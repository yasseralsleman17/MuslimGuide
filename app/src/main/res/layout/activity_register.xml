<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#ECECEC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text=" Wellcome Muslim Guide"
                android:textColor="@color/black"
                android:textSize="45sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="159dp"
                android:layout_height="98dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/alkaaba" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"

                android:background="@color/white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/full_name_reg"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="#ECECEC"

                    android:hint="  Fullname" />

                <EditText
                    android:id="@+id/user_name_reg"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#ECECEC"
                    android:hint="  Username" />

                <EditText
                    android:id="@+id/password_reg"

                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#ECECEC"
                    android:hint="  password" />

                <EditText
                    android:id="@+id/confirm_pass_reg"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#ECECEC"
                    android:hint="  Confirm Password" />

                <EditText
                    android:id="@+id/email_reg"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#ECECEC"
                    android:hint="  Email" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_register_page"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#A88F75"
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:text="register"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>